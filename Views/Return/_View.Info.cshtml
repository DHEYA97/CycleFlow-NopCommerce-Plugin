@using Nop.Plugin.Misc.CycleFlow.Models.Return
@model ReturnModel
 
<div class="card-body">
    <div class="cards-group">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group row">
                    <div class="col-md-4">
                        <nop-label asp-for="CustomerName" />
                    </div>
                    <div class="col-md-8">
                        <div class="form-text-row">@Model.CustomerName</div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <nop-label asp-for="ReturnCount" />
                    </div>
                    <div class="col-md-8">
                        <div class="form-text-row">@Model.ReturnCount</div>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group row">
                    <div class="col-md-4">
                        <nop-label asp-for="Year" />
                    </div>
                    <div class="col-md-8">
                        <div class="form-text-row">@Model.Year</div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <nop-label asp-for="Month" />
                    </div>
                    <div class="col-md-8">
                        <div class="form-text-row">@Model.Month</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>