@model Nop.Plugin.Misc.CycleFlow.Models.Deportation.DeportationModel
<style>
    .image-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
    }
    .image-container img {
        border: 2px solid #ccc;
        border-radius: 5px;
        padding: 5px;
        max-width: 100px;
        max-height: 100px;
    }
</style>
<div class="card-body">
    <div class="cards-group">
        <div class="form-group row">
            <div class="col-md-12" style="overflow-x: auto;">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @T("Admin.Orders.Products.Number")
                            </th>
                            <th>
                                @T("Admin.Orders.Products.SKU")
                            </th>
                            <th>
                                @T("Admin.Orders.Products.ProductName")
                            </th>
                            <th>
                                @T("Admin.Orders.Products.Quantity")
                            </th>
                            <th>
                                @T("Admin.Orders.Products.Picture")
                            </th>
                        
                        </tr>
                    </thead>
                    <tbody>
                        @{int index = 0;}
                    @foreach (var item in Model.ProductOrderItem)
                    {
                        <tr>
                            <td class="text-center">
                                <p>@(++index)</p>
                            </td>
                            <td class="text-center">
                                <p>@item.Sku</p>
                            </td>
                            <td class="text-center">
                                <p>@item.ProductName</p>
                            </td>
                            <td class="text-center">
                                <p>@item.Quantity</p>
                            </td>
                            <td class="text-center">
                                    <div class="image-container">
                                        <img src="@item.PictureThumbnailUrl" alt="" title=""  />
                                    </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
